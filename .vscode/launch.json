  "version": "0.2.0",
  "configurations": [
    {
      "name": "django: runserver",
      "type": "debugpy",
      "request": "launch",
      "module": "manage",
      "args": ["runserver"],
      "cwd": "${workspaceFolder}/src",
      "console": "internalConsole",
      "django": true,
      "justMyCode": false
    },
    {
      "name": "django: tasks",
      "type": "debugpy",
      "request": "launch",
      "module": "manage",
      "args": ["db_worker", "-v", "3"],
      "cwd": "${workspaceFolder}/src",
      "console": "internalConsole",
      "django": true,
      "justMyCode": false
    },
    {
      "name": "celery",
      "type": "debugpy",
      "request": "launch",
      "module": "celery",
      "args": [
        "--workdir", "./src",
        "-A", "spokanetech.celery",
        "worker",
        "-B",
        "-l", "INFO"
      ],
      "cwd": "${workspaceFolder}",
      "console": "internalConsole"
    },
    {
      "name": "docs",
      "type": "debugpy",
      "request": "launch",
      "module": "mkdocs",
      "args": ["serve"],
      "cwd": "${workspaceFolder}",
      "console": "internalConsole",
      "justMyCode": false
    }
  ]
}
